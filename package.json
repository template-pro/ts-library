{
  "name": "@template-pro/ts-library",
  "version": "0.0.1",
  "preview": true,
  "description": "The TypeScript library template",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "nodemon",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "prebuild": "npm run clean && tsc --emitDeclarationOnly  --outDir temp --p . && npm run roll-types",
    "clean": "rimraf dist types temp",
    "roll-types": "api-extractor run && rimraf temp",
    "build": "rollup -c",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "docs": "typedoc",
    "release": "release-it --ci",
    "release:beta": "release-it --preReleaseId=beta --preRelease --ci",
    "release:minor": "release-it minor --ci",
    "release:minor:beta": "release-it minor --preReleaseId=beta --preRelease --ci",
    "cm": "test-cm"
  },
  "keywords": [
    "template",
    "typescript",
    "jest"
  ],
  "author": {
    "name": "Wxh16144",
    "email": "wxh16144@qq.com",
    "url": "https://github.com/wxh16144"
  },
  "license": "ISC",
  "devDependencies": {
    "@commitlint/config-conventional": "~11.0.0",
    "@microsoft/api-extractor": "^7.18.5",
    "@rollup/plugin-buble": "^0.21.3",
    "@types/jest": "^26.0.23",
    "@wuxh/eslint-config-ts": "0.0.3",
    "commitizen": "~4.2.2",
    "commitlint": "~11.0.0",
    "conventional-changelog-cli": "^2.1.1",
    "cz-customizable": "~6.3.0",
    "eslint": "^7.27.0",
    "esno": "*",
    "git-commit-lint": "~1.0.0",
    "husky": "~4.3.4",
    "jest": "^27.0.1",
    "jsdom": "16.6.0",
    "jsdom-global": "3.0.2",
    "lint-staged": "^10.2.9",
    "nodemon": "^2.0.7",
    "release-it": "^13.6.5",
    "rimraf": "^3.0.2",
    "rollup": "^2.61.1",
    "rollup-plugin-esbuild": "^4.2.3",
    "rollup-plugin-terser": "^7.0.2",
    "ts-jest": "^27.0.0",
    "typescript": "^4.2.4"
  },
  "commitlint": {
    "extends": [
      "./node_modules/git-commit-lint/rules/lint-config.js"
    ]
  },
  "config": {
    "cz-customizable": {
      "config": "./node_modules/git-commit-lint/rules/cz-config.js"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "src/**/*.{ts}": [
      "npm run lint:fix",
      "npm run lint",
      "git add"
    ]
  }
}
